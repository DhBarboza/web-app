{
    "compilerOptions": {
        "target": "es2021",
        "module": "ESNext",
        "baseUrl": "./src",
        "paths": {
            "@application/*": ["application/*"],
            "@domain/*": ["domain/*"],
            "@infra/*": ["infra/*"]
        },
        "rootDirs": ["src", "test"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist", "migrations", "coverage"]
}
